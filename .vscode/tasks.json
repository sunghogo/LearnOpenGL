{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: gcc compile",
      "command": "/usr/bin/gcc",
      "args": [
        "-std=c17",
        "-Wall",
        "-Werror",
        "-I/opt/homebrew/include",
        "-I${workspaceFolder}/include",
        "-c",
        "${file}",
        "-o",
        "${workspaceFolder}/build/${fileBasenameNoExtension}.o"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: /usr/bin/gcc"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++ debug with GLAD",
      "command": "/usr/bin/g++",
      "args": [
        "-std=c++20",
        "-Wall",
        "-Werror",
        "-Weffc++",
        "-Wextra",
        "-Wconversion",
        "-Wsign-conversion",
        "-fdiagnostics-color=always",
        "-ggdb",
        "-pedantic-errors",
        "-I/opt/homebrew/include",
        "-I${workspaceFolder}/include",
        "-L/opt/homebrew/lib",
        "-L${workspaceFolder}/src",
        "-lGLEW",
        "-lglfw",
        "-framework",
        "OpenGL",
        "${workspaceFolder}/build/glad.o",
        "${file}",
        "-o",
        "${fileDirname}/debug/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: /usr/bin/g++"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build with GLAD",
      "command": "/usr/bin/g++",
      "args": [
        "-std=c20",
        "-Wall",
        "-Werror",
        "-Weffc++",
        "-Wextra",
        "-Wconversion",
        "-Wsign-conversion",
        "-O2",
        "-DNDEBUG",
        "-pedantic-errors",
        "-I/opt/homebrew/include",
        "-I${workspaceFolder}/include",
        "-L/opt/homebrew/lib",
        "-L${workspaceFolder}/src",
        "-lGLEW",
        "-lglfw",
        "-framework",
        "OpenGL",
        "${workspaceFolder}/build/glad.o",
        "${file}",
        "-o",
        "${fileDirname}/release/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: /usr/bin/g++"
    }
  ]
}
