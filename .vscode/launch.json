      "MIMode": "lldb",
      "preLaunchTask": "C/C++: g++ debug with GLAD",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for debugger",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
